{
    "name": "reformo/backendbase-core",
    "description": "Hexagonal (Ports and Adapters) Architecture and CQRS Ready Application Core!",
    "type": "project",
    "homepage": "https://github.com/reformo/backendbase-core",
    "license": "MIT",
    "keywords": [
        "skeleton",
        "middleware",
        "psr",
        "psr-7",
        "psr-11",
        "psr-15",
        "zf",
        "zendframework",
        "mezzio",
        "cqrs",
        "hexagonal",
        "tactician",
        "commandbus",
        "doctrine"
    ],
    "config": {
        "sort-packages": true
    },
    "extra": {
        "zf": {
            "component-whitelist": [
                "mezzio/mezzio",
                "mezzio/mezzio-helpers",
                "mezzio/mezzio-router",
                "laminas/laminas-httphandlerrunner",
                "mezzio/mezzio-fastroute",
                "mezzio/mezzio-twigrenderer"
            ]
        }
    },
    "support": {
        "issues": "https://github.com/reformo/hexagonal-cqrs-skeleton/issues",
        "source": "https://github.com/reformo/hexagonal-cqrs-skeleton",
        "rss": "https://github.com/reformo/hexagonal-cqrs-skeleton/releases.atom"
    },
    "require": {
        "php": "^7.4 | ^8.0",
        "ext-apcu": "*",
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-gettext": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-pdo": "*",
        "ext-redis": "*",
        "ext-sodium": "*",
        "akrabat/ip-address-middleware": "^2.0",
        "cocur/slugify": "^v4.0.0",
        "doctrine/collections": "^1.6.7",
        "doctrine/dbal": "^2.12.1",
        "doctrine/orm": "^2.8.1",
        "gettext/gettext": "^v5.5.4",
        "guzzlehttp/guzzle": "^7.2.0",
        "intervention/image": "^2.5.1",
        "pascaldevink/shortuuid": "^3.0",
        "laminas/laminas-component-installer": "^2.4.0",
        "laminas/laminas-config-aggregator": "^1.4.0",
        "laminas/laminas-dependency-plugin": "^2.1.0",
        "laminas/laminas-diactoros": "^2.5.0",
        "laminas/laminas-inputfilter": "^2.11.0",
        "laminas/laminas-permissions-rbac": "^3.0.2",
        "laminas/laminas-servicemanager": "^3.6.3",
        "laminas/laminas-stdlib": "^3.3.1",
        "lcobucci/jwt": "^4.0.0",
        "league/flysystem": "^1.1.3",
        "league/tactician": "^2.0-rc1",
        "mezzio/mezzio": "^3.3.0",
        "mezzio/mezzio-csrf": "^1.0.1",
        "mezzio/mezzio-fastroute": "^3.1.0",
        "mezzio/mezzio-helpers": "^5.4.0",
        "mezzio/mezzio-problem-details": "^1.3.0",
        "mezzio/mezzio-session-ext": "^1.10.0",
        "mezzio/mezzio-twigrenderer": "^2.6.1",
        "mkorkmaz/redislabs-rejson": "^1.0",
        "moneyphp/money": "^v3.3.1",
        "monolog/monolog": "^2.2.0",
        "nesbot/carbon": "^2.43.0",
        "nikolaposa/rate-limit": "^2.2.0",
        "ocramius/proxy-manager": "^2.11.1",
        "phpoffice/phpspreadsheet": "^1.16.0",
        "psr/container": "^1.0.0",
        "psr/http-message": "^1.0.1",
        "psr/http-server-handler": "^1.0.1",
        "psr/http-server-middleware": "^1.0.1",
        "psr/log": "^1.1.3",
        "xantios/mimey": "^v2.1.1",
        "ramsey/uuid": "^4.1.1",
        "ramsey/uuid-doctrine": "^1.6.0",
        "robinvdvleuten/ulid": "^v5.0.0",
        "scienta/doctrine-json-functions": "^4.3.0",
        "selami/console": "^2.1",
        "selami/stdlib": "^2.0",
        "twig/extensions": "^v1.5.4",
        "vlucas/phpdotenv": "^v3.6.8",
        "webmozart/assert": "^1.9.1"
    },
    "require-dev": {
        "behat/behat": "^v3.8.1",
        "doctrine/coding-standard": "^8.2.0",
        "filp/whoops": "^2.9.2",
        "laminas/laminas-development-mode": "^3.3.0",
        "malukenho/mcbumpface": "^1.1.5",
        "phpunit/phpunit": "^9.5.1",
        "roave/security-advisories": "dev-master",
        "rskuipers/php-assumptions": "^0.8.0",
        "squizlabs/php_codesniffer": "^3.5.8",
        "swoole/ide-helper": "^4.6.2"
    },
    "autoload": {
        "psr-4": {
            "BackendBase\\Shared\\": "src/BackendBase/Shared/",
            "BackendBase\\Domain\\": "src/BackendBase/Domain/",
            "BackendBase\\Infrastructure\\": "src/BackendBase/Infrastructure/",
            "BackendBase\\PrivateApi\\": "src/BackendBase/Infrastructure/Ui/PrivateApi/",
            "BackendBase\\PublicWeb\\": "src/BackendBase/Infrastructure/Ui/PublicWeb/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IntegrationTest\\": "test/IntegrationTest/",
            "UnitTest\\": "test/UnitTest/",
            "Fixtures\\": "test/Fixtures/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@development-enable",
            "cp .env.dist .env",
            "cp config/autoload/doctrine.local.php.dist config/autoload/doctrine.local.php",
            "cp config/autoload/mezzio-swoole.local.php.dist config/autoload/mezzio-swoole.local.php"
        ],
        "post-install-cmd": [
            "composer dumpautoload -o"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "expressive": "expressive --ansi",
        "check": [
            "@cs-check",
            "@check-assumptions",
            "@test"
        ],
        "cs-check": "vendor/bin/phpcs --standard=Doctrine",
        "cs-fix": "vendor/bin/phpcbf --standard=Doctrine",

        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
